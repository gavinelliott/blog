<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: #051005;
		color: #FFFFFF;
		text-align: center;
	}
	
	.footer-container {
		max-width: 1400px;
		width: 100%;
		margin: 0 auto;
		padding: 0 2rem;
	}
	
	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}
	
	.footer-brand {
		font-family: "franklin-gothic-urw-comp", sans-serif;
		font-weight: 600;
		font-size: 1.5rem;
		color: #FFFFFF;
		letter-spacing: 0.02em;
	}
	
	.footer-brand a {
		color: #FFFFFF;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}
	
	.footer-brand a:hover {
		opacity: 0.8;
	}
	
	.copyright {
		margin-top: 2em;
		color: #FFFFFF;
		opacity: 0.8;
		font-size: 0.8em;
	}
	
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	
	.social-links a {
		text-decoration: none;
		color: #FFFFFF;
		transition: all 0.2s ease;
	}
	
	.social-links a:hover {
		color: #90B090;
		transform: translateY(-2px);
	}
	
	.social-links a:focus-visible {
		outline: 2px solid #FFFFFF;
		outline-offset: 4px;
		color: #90B090;
	}
	
	@media (min-width: 768px) {
		.footer-content {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}
	}
	
	@media (forced-colors: active) {
		.social-links a:focus-visible {
			outline: 2px solid ButtonText;
		}
	}
</style>