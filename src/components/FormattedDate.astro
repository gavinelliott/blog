---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time 
	datetime={date.toISOString()} 
	aria-label={`Posted on ${date.toLocaleDateString('en-us', {
		year: 'numeric',
		month: 'long',
		day: 'numeric',
	})}`}
>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>
