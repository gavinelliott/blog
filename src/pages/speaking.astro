---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Speaking | Gavin Elliott" description="Speaking engagements and appearances by Gavin Elliott" />
		<style>
			*, *::before, *::after {
				box-sizing: border-box;
			}
			
			html, body {
				overflow-x: hidden;
				width: 100%;
				margin: 0;
				padding: 0;
				position: relative;
			}
			
			main {
				padding-top: 5rem;
				background-color: #FFFFF8;
				min-height: 100vh;
				width: 100%;
				overflow-x: hidden;
			}
			
			.page-header {
				padding: 6rem 2rem 4rem;
				text-align: center;
				max-width: 800px;
				margin: 0 auto;
			}
			
			.page-header h1 {
				font-family: "franklin-gothic-urw-comp", sans-serif;
				font-weight: 600;
				font-size: 4rem;
				color: #051005;
				margin-bottom: 1.5rem;
				line-height: 1;
				text-transform: uppercase;
			}
			
			.page-header p {
				font-family: "linotype-sabon", sans-serif;
				font-size: 1.35rem;
				line-height: 1.55;
				color: #051005;
				opacity: 0.8;
			}
			
			.content-container {
				max-width: 900px;
				width: 100%;
				margin: 0 auto;
				padding: 0 2rem 4rem;
				font-family: "linotype-sabon", sans-serif;
				font-size: 1.35rem;
				line-height: 1.55;
				color: #051005;
			}
			
			.speaking-section {
				margin: 3em 0;
			}
			
			h2, h3, h4 {
				font-family: "franklin-gothic-urw-comp", sans-serif;
				font-weight: 600;
				margin: 1.5em 0 0.8em;
				color: #051005;
			}
			
			h2 {
				font-size: 2.25rem;
				letter-spacing: 0.02em;
				text-transform: uppercase;
			}
			
			h3 {
				font-size: 1.85rem;
			}
			
			p {
				margin-bottom: 1.2rem;
			}
			
			a {
				color: #051005;
				text-decoration: none;
				background-image: linear-gradient(transparent calc(100% - 3px), rgba(144, 176, 144, 0.7) 3px);
				background-repeat: no-repeat;
				background-size: 100% 100%;
				padding-bottom: 0.1em;
				transition: background-image 0.3s ease;
			}
			
			a:hover {
				background-image: linear-gradient(transparent calc(100% - 3px), #90B090 3px);
				text-decoration: none;
			}
			
			.skip-link {
				position: absolute;
				top: -40px;
				left: 0;
				background: #90B090;
				color: #051005;
				padding: 8px;
				z-index: 2000;
				font-family: "franklin-gothic-urw-comp", sans-serif;
				transition: top 0.3s ease;
			}

			.skip-link:focus {
				top: 0;
			}

			@media (max-width: 1024px) {
				.page-header {
					padding: 5rem 2rem 3rem;
				}
				
				.page-header h1 {
					font-size: 3.5rem;
				}
				
				h2 {
					font-size: 2rem;
				}
				
				h3 {
					font-size: 1.7rem;
				}
			}
			
			@media (max-width: 768px) {
				.page-header {
					padding: 4rem 1.5rem 3rem;
				}
				
				.page-header h1 {
					font-size: 3rem;
				}
				
				.page-header p {
					font-size: 1.25rem;
				}
				
				.content-container {
					padding: 0 1.5rem 3rem;
					font-size: 1.25rem;
				}
				
				.speaking-section {
					margin: 2em 0;
				}
			}
			
			@media (max-width: 480px) {
				.page-header {
					padding: 3rem 1rem 2rem;
				}
				
				.page-header h1 {
					font-size: 2.5rem;
				}
				
				.page-header p {
					font-size: 1.15rem;
				}
				
				.content-container {
					padding: 0 1rem 2rem;
					font-size: 1.15rem;
				}
				
				h2 {
					font-size: 1.8rem;
				}
				
				h3 {
					font-size: 1.5rem;
				}
				
				.speaking-section {
					margin: 1.5em 0;
				}
			}
		</style>
