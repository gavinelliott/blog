---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Writing | Gavin Elliott" description="Articles, essays and thoughts by Gavin Elliott" />
		<style>
			main {
				padding-top: 5rem;
				background-color: #FFFFF8;
				min-height: 100vh;
				width: 100%;
				overflow-x: hidden;
			}
			
			.page-header {
				padding: 6rem 2rem 4rem;
				text-align: center;
				max-width: 800px;
				margin: 0 auto;
			}
			
			.page-header h1 {
				font-family: "franklin-gothic-urw-comp", sans-serif;
				font-weight: 600;
				font-size: 4rem;
				color: #051005;
				margin-bottom: 1.5rem;
				line-height: 1;
			}
			
			.page-header p {
				font-family: "linotype-sabon", sans-serif;
				font-size: 1.35rem;
				line-height: 1.55;
				color: #051005;
				opacity: 0.8;
			}
			
			.content-container {
				max-width: 1200px;
				width: 100%;
				margin: 0 auto;
				padding: 0 2rem 3rem;
			}
			
			.section-title {
				padding: 1.5rem 0;
			}
			
			.section-title h2 {
				font-family: "franklin-gothic-urw-comp", sans-serif;
				font-weight: 600;
				font-size: 2.5rem;
				color: #051005;
				text-transform: uppercase;
				letter-spacing: 0.02em;
				line-height: 1;
			}
			
			.section-title h2 span {
				display: block;
				margin-bottom: 0.5rem;
			}
			
			.post-card {
				padding: 1.5rem;
				border-bottom: 1px solid rgba(5, 16, 5, 0.1);
				transition: background-color 0.3s ease;
				display: flex;
				flex-direction: column;
				height: 100%;
			}
			
			.post-card:hover {
				background-color: rgba(144, 176, 144, 0.1);
			}
			
			.post-card .date {
				font-family: "linotype-sabon", sans-serif;
				font-size: 1rem;
				color: rgba(5, 16, 5, 0.7);
				margin: 0.5rem 0;
			}
			
			.post-card h3 {
				margin-bottom: 0.8rem;
			}
			
			.post-card h3 a {
				font-family: "franklin-gothic-urw-comp", sans-serif;
				font-weight: 600;
				font-size: 2rem;
				color: #051005;
				text-transform: uppercase;
				letter-spacing: 0.02em;
				text-decoration: none;
				display: inline;
				background-image: linear-gradient(transparent calc(100% - 3px), rgba(144, 176, 144, 0.7) 3px);
				background-repeat: no-repeat;
				background-size: 100% 100%;
				padding-bottom: 0.1em;
				transition: background-image 0.3s ease;
				line-height: 1.2;
			}
			
			.post-card h3 a:hover {
				background-image: linear-gradient(transparent calc(100% - 3px), #90B090 3px);
			}
			
			.post-card .description {
				font-family: "linotype-sabon", sans-serif;
				font-size: 1.35rem;
				line-height: 1.55;
				color: #051005;
				margin-top: 1rem;
				flex-grow: 1;
			}
			
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 3rem;
				margin: 4rem 0;
			}
			
			.year-section {
				margin-bottom: 4rem;
			}
			
			.year-title {
				font-family: "franklin-gothic-urw-comp", sans-serif;
				font-weight: 600;
				font-size: 2rem;
				color: #051005;
				margin: 0 0 2rem 0;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid rgba(5, 16, 5, 0.1);
				text-align: left;
			}
			
			@media (max-width: 1200px) {
				.posts-grid {
					grid-template-columns: repeat(2, 1fr);
					gap: 2.5rem;
				}
				
				.content-container {
					padding: 0 1.5rem 3rem;
				}
			}
			
			@media (max-width: 1024px) {
				.page-header {
					padding: 5rem 2rem 3rem;
				}
				
				.page-header h1 {
					font-size: 3.5rem;
				}
				
				.post-card h3 a {
					font-size: 1.8rem;
				}
				
				.post-card .description {
					font-size: 1.25rem;
				}
			}
			
			@media (max-width: 768px) {
				.posts-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
				
				.page-header {
					padding: 4rem 1.5rem 3rem;
				}
				
				.page-header h1 {
					font-size: 3rem;
				}
				
				.page-header p {
					font-size: 1.25rem;
				}
				
				.content-container {
					padding: 0 1.5rem 2rem;
				}
				
				.post-card .description {
					font-size: 1.2rem;
				}
			}
			
			@media (max-width: 480px) {
				.page-header {
					padding: 3rem 1rem 2rem;
				}
				
				.page-header h1 {
					font-size: 2.5rem;
				}
				
				.page-header p {
					font-size: 1.15rem;
				}
				
				.content-container {
					padding: 0 1rem 2rem;
				}
				
				.post-card h3 a {
					font-size: 1.6rem;
				}
				
				.post-card .description {
					font-size: 1.1rem;
				}
				
				.posts-grid {
					margin: 2rem 0;
				}
			}
		</style>
	</head>
	<body>
		<!-- Main navigation bar -->
		<Navigation />
		
		<main>
			<div class="page-header">
				<h1>WRITING</h1>
				<p>Articles, essays and thoughts on design leadership, team management, and navigating complex design challenges.</p>
			</div>
			
			<div class="content-container">
				<div class="posts-grid">
					{posts.map(post => (
						<article class="post-card">
							<h3><a href={`/blog/${post.slug}/`}>{post.data.title.toUpperCase()}</a></h3>
							<p class="date"><FormattedDate date={post.data.pubDate} /></p>
							<p class="description">{post.data.description}</p>
						</article>
					))}
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html> 